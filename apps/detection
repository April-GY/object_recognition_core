#!/usr/bin/env python
import roscompat
from object_recognition_core.pipelines.plasm import create_detection_plasm
import ecto

DEBUG = False

if __name__ == '__main__':
    plasm = create_detection_plasm()
    if DEBUG:
        #render the DAG with dot
        ecto.view_plasm(plasm)

    sched = ecto.schedulers.Multithreaded(plasm)
    sched.execute()
